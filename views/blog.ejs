<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/header") %>
        <title>Blog</title>
</head>

<body>
    <%- include("./partials/nav") %>

    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%=blog.coverImageUrl %>"  width="700px" alt=""> <pre><%= blog.body %></pre>
    </div>

       

    <div class="container mt-4">
        <img src="<%=blog.createdBy.profileImageUrl%>" width="30px" alt=""><%=blog.createdBy.fullName%>
    </div>

   
      
         <!-- Comment Section  -->

    <div class="container mt-3">
        <h3>Comments (<%= comments.length %>) </h3>
       <% if (locals.user) { %>
        <h4> <%#   user.createdBy.fullName %></h4>
         <form action="/blog/comment/<%=blog._id%>" method="post">
            <div class="mb-3" style="display: flex;
            flex-direction: row;">
                <input 
                type="text" class="form-control"
                id="commentContent"
                name="content"
                placeholder="Enter Your Comment">
                <button class="btn btn--sm btn-dark" type="submit" style="width: 150px;">Post</button>
              </div>
    
              </div>
             
        </form>

        <%     } %>
    </div>
    <div class="mt-3">
        <% comments.forEach(comment => { %>
            <div class="container" style="background-color: rgb(238, 238, 238); border-radius: 17px; padding: 10px;">
                <img src="<%=comment.createdBy.profileImageUrl%>" width="30px" alt="">
                <%=comment.createdBy.fullName%>: <p><%= comment.content %></p>
            </div>
            <div class="mb-3"></div>
            <% }); %>
    </div>

        <%- include("./partials/footer") %>
</body>

</html>